<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FirstActivityTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="NoActionBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>


    <!-- UI -->
    <style name="MessageBubble">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/message_bubble_marginVertical</item>
        <item name="android:layout_marginTop">@dimen/message_bubble_marginVertical</item>
        <item name="android:layout_marginStart">@dimen/message_bubble_marginHorizontal</item>
        <item name="android:layout_marginEnd">@dimen/message_bubble_marginHorizontal</item>
        <item name="cardCornerRadius">@dimen/message_bubble_cornerRadius</item>
        <item name="cardElevation">@dimen/message_bubble_shadowRadius</item>
        <item name="cardBackgroundColor">@color/bubbleInterlocutor</item>
    </style>

    <style name="MessageText">
        <item name="android:layout_marginBottom">@dimen/message_bubble_marginInner</item>
        <item name="android:layout_marginTop">@dimen/message_bubble_text_marginTop</item>
        <item name="android:layout_marginStart">@dimen/message_bubble_marginInner</item>
        <item name="android:layout_marginEnd">@dimen/message_bubble_marginInner</item>
    </style>

    <style name="MessageName">
        <item name="android:layout_marginTop">@dimen/message_bubble_marginInner</item>
        <item name="android:textSize">@dimen/message_bubble_textSize_little</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="MessageTime" parent="MessageName">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:textColor">@color/black_overlay</item>
    </style>

    <style name="MessageImage">
        <item name="android:layout_margin">@dimen/message_bubble_marginInner</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:maxHeight">@dimen/message_bubble_image_maxHeight</item>
        <item name="android:maxWidth">@dimen/message_bubble_image_maxWidth</item>
        <!--<item name="android:minHeight">@dimen/message_bubble_image_minHeight</item>-->
        <!--<item name="android:minWidth">@dimen/message_bubble_image_minWidth</item>-->
    </style>

    <style name="MessageAuthorPicture">
        <item name="android:layout_marginTop">@dimen/message_avatar_marginVertical</item>
    </style>
</resources>
